{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Bienvenue {% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/home.css') }}">{% endblock %}
{% block body %}

{# Affichage de la page et des bouton d'inscription et connexion avec lien vers modals #}
<section class="back ">
    <article class="container">
        <div class="row ">
            <div class="col-md-4">&nbsp;</div>
            <div class="col-md-4 cadre shadow ">
                <div class="p-5 ">
                    <h1 class="text-center mb-4 text-white">Bienvenue </h1>
                    <div class="text-center ">

                        <a href="{{ path('app_login') }}" class="btn mr-4 bg-light" data-toggle="modal"
                            data-target="#exampleModal" data-whatever="@mdo">Se connecter</a>

                        <a href="{{ path('new_user') }}" class="btn bg-light" data-toggle="modal"
                            data-target="#inscription" data-whatever="@mdo">S'inscrire</a>
                    </div>
                </div>
            </div>
        </div>
    </article>
</section>

{# MODAL - Affichage du formulaire de connexion #}
<section class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            {# Formulaire #}
            <article class="container">
                <form action="{{ path('app_login') }}" method="post">
                    {% if error is defined and error%}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                    {% endif %}

                    <h1 class="h3 text-center mb-3 font-weight-normal">Connexion</h1>
                    <label for="inputUsername" class="sr-only">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
                        placeholder="Votre Username" required autofocus>
                    <label for="inputPassword" class="sr-only">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control my-3"
                        placeholder="Mot de passe" required>
                    <input type="checkbox" onclick="myFunction()">Voir mon mot de passe

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div> #}

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-dark m-4">Connexion</button>
                    </div>
                </form>
            </artcile>
        </div>
    </div>
</section>

{# MODAL - Affichage du formulaire d'inscription #}
<section class="modal fade" id="inscription" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <article class="container">
                <h1>Inscription</h1>
                {{form_start(form)}}
                {{form_widget(form)}}
                <button type="submit" class="btn btn-primary bg-dark mb-5">S'inscrire</button>
                {{form_end(form)}}
            </article>
        </div>
    </div>
</section>
{% endblock %}

{# Balise JavaScript pour l'affichage des modals #}
{% block javascripts %}
    {# Affichage des fenÃªtre modal #}
    <script src="{{ asset('bundles/sideclickbootstrapmodal/js/sideclick-bootstrap-modal.js') }}"></script>

    {# Script d'affichage du mot de passe #}
    <script>
    function myFunction() {
    var x = document.getElementById("inputPassword");
    if (x.type === "password") {
        x.type = "text";
    } else {
        x.type = "password";
    }
    }
    </script>
{% endblock %}