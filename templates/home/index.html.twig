{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Bienvenue {% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/home.css') }}">{% endblock %}
{% block body %}

<div class="back ">
    <div class="container">

        <div class="row ">
            <div class="col-md-4">&nbsp;</div>
            <div class="col-md-4 cadre shadow ">
                <div class="p-5 ">
                    <h1 class="text-center mb-4 text-white">Bienvenue </h1>
                    <div class="text-center ">

                        <a href="{{ path('app_login') }}" class="btn mr-4 bg-light" data-toggle="modal"
                            data-target="#exampleModal" data-whatever="@mdo">Se connecter</a>

                        <a href="{{ path('new_user') }}" class="btn bg-light" data-toggle="modal"
                            data-target="#inscription" data-whatever="@mdo">S'inscrire</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="container">
                <form action="{{ path('app_login') }}" method="post">
                    {% if error is defined and error%}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                    {% endif %}

                    <h1 class="h3 text-center mb-3 font-weight-normal">Connexion</h1>
                    <label for="inputUsername" class="sr-only">Username</label>
                    <input type="text" value="" name="username" id="inputUsername" class="form-control"
                        placeholder="Votre Username" required autofocus>
                    <label for="inputPassword" class="sr-only">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control my-3"
                        placeholder="Mot de passe" required>
                    <input type="checkbox" onclick="myFunction()">Voir mon mot de passe

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div> #}
                   

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-dark m-4">Connexion</button>
                        <br>
                        <a href="{{ path('home') }}">Revenir a l'accueil</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="inscription" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="container">
                <h1>Inscription</h1>

                {{form_start(form)}}
                {{form_widget(form)}}
                <button type="submit" class="btn btn-primary bg-dark">S'inscrire</button>
                {{form_end(form)}}
                
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('bundles/sideclickbootstrapmodal/js/sideclick-bootstrap-modal.js') }}"></script>
{% endblock %}