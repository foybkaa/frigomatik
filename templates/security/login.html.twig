{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section class="container">
    <div class="row mt-5">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6 bg-light shadow rounded">
            <div class="p-3 m-5">
                <form method="post">
                    {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                    {% endif %}

                    <h1 class="h3 text-center mb-3 font-weight-normal">Connexion</h1>
                    <label for="inputUsername" class="sr-only">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                        class="form-control" placeholder="Votre Username" required autofocus>
                    <label for="inputPassword" class="sr-only">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control my-3"
                        placeholder="Mot de passe" required>
                    <input type="checkbox" onclick="myFunction()">Voir mon mot de passe

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-dark m-4">Connexion</button>
                        <br>
                            <a href="{{ path('home') }}" >Revenir a l'accueil</a>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
function myFunction() {
  var x = document.getElementById("inputPassword");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>
{% endblock %}
