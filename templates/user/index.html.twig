{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Mon profil {% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{asset('assets/css-frigo/app-show-recipe.css')}}"> {% endblock %}


{% block body %}
<article class="jumbotron ">
    <h1 class="text-center mb-4"> Profile de {{app.user}}</h1>
    <article class="row mb-5">
        <section class="col-6">
            <div class="user-profil text-center">
                <img src="{{ app.user.avatar }}"  alt="image de profil de {{ app.user.username }}"
                    class="user-profil-img">
            </div>
        </section>
        <section class="col-6">
            <p>Pseudo : {{ app.user.username }}</p>
            <p>Sexe : {{ app.user.gender }}</p>
            <p>Pr√©nom : {{ app.user.firstname }}</p>
            <p>Nom : {{ app.user.lastname }}</p>
            <p>Email : {{ app.user.email }}</p>
            <p>Age : {{ app.user.age }} ans</p>
            <p>Poids :{{ app.user.weight }} kg</p>
            <p>Taille : {{ app.user.height }} cm</p>
            <p>Membre depuis : {{ app.user.createdAt | date("d/m/Y") }}</p>
        </section>

    </article>
<div class="text-center ">
    <a href="{{ path('app_user_edit') }}" class="btn btn-outline-success mb-4 mr-3">Modifier mes informations</a>

    <a href="{{ path('app_user_upPassword') }}" class="btn btn-outline-success mb-4">Modifier mon mot de passe</a>
</div>
</article>

{% endblock %}