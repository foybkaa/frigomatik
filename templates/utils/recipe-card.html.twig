<div class="col-3 mb-3 ">
    <div class="card">
            <a href="{{ path('app_recipe_show', {'slug':recipe.slug}) }}">
            <div style="overflow: hidden; height: 200px">
                <img src="{{asset('assets/images/imagesRecipe/' ~ recipe.image)}}"  class="card-img-top" alt="" style="height: 200px; width: auto;">
            </div>
            </a> 
        
        
        <div class="card-body" style="height: 225px">
            <h5 class="font-weight-bold">{{recipe.name}}</h5>
            <p class="card-text"> Difficult√© :
                {% for i in 1..recipe.level %} 
                    <i class="fa fa-bolt" aria-hidden="true" style="color: orange;"></i>
                {% endfor %}
            </p>
            <p class="card-text"> Personnes :
                {% for i in 1..recipe.people %}
                    <i class="fa fa-spoon" aria-hidden="true"></i>
                {% endfor %}
            </p>
            {# Affichage des tags #}
            <p>
            {% for tag in recipe.tag %}
            <a href="{{path('app_recipe_tag', {'id':tag.id})}}"><span class="badge badge-info">{{ tag.name }}</span></a>
            {% endfor %}
            </p>
        </div>
    </div>
</div>